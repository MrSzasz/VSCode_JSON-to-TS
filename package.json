{
  "name": "json-to-ts",
  "displayName": "JSON to TS",
  "description": "JSON to TS is an extension that converts JSON files to TypeScript interfaces, making them easier to work without leaving the editor",
  "publisher": "TomasLeandroLugo",
  "icon": "resources/icon.png",
  "keywords": [
    "JSON",
    "TypeScript",
    "Interface",
    "Conversion",
    "Code generation",
    "Development",
    "Productivity",
    "Visual Studio Code",
    "Extension"
  ],
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Other",
    "Formatters"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "json-to-ts.convertJSON",
        "title": "Convert JSON to TS"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection && !editorHasMultipleSelection",
          "command": "json-to-ts.convertJSON",
          "group": "1_modification"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.86.0",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "json-to-ts": "^1.7.0"
  }
}
